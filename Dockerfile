# Используем официальный образ Node.js
FROM node:16-alpine

# Установка рабочей директории
WORKDIR /app

# Копирование package.json и package-lock.json в рабочую директорию
COPY package*.json ./

# Установка зависимостей
RUN npm ci

# Копирование всех файлов в рабочую директорию
COPY . .

# Определение переменных окружения для токена бота и порта
ENV PORT=3000

# Открытие порта контейнера
EXPOSE $PORT

# Запуск приложения
CMD ["npm", "start"]
